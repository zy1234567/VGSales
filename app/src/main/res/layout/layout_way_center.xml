<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/color_107"
        android:layout_height="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="拜访对象"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_7"
            android:textColor="@color/list_item_text_gray_color"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_006" />
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="对方称呼"
            android:textSize="14sp"
            android:textColor="@color/color_100"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/tv_name"
            android:background="@null"
            android:textColorHint="@color/color_103"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/color_100"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/text_5"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/tv_1"
            android:hint="请输入对方的称呼"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:singleLine="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_107"
        android:layout_marginLeft="12dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_need_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_006" />
        <TextView
            android:id="@+id/tv_3"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="对方手机"
            android:textSize="14sp"
            android:textColor="@color/color_100"
            android:layout_marginLeft="12dp"/>
        <EditText
            android:id="@+id/et_the_op_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColorHint="@color/color_103"
            android:layout_centerVertical="true"
            android:textColor="@color/color_100"
            android:layout_marginLeft="8dp"
            android:singleLine="true"
            android:inputType="number"
            android:ellipsize="end"
            android:textSize="@dimen/text_5"
            android:layout_toRightOf="@+id/tv_3"
            android:hint="请输入对方的手机号码"/>
        <TextView
            android:id="@+id/tv_phone_mail_the_op"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_c_2_f_001"
            android:text="手机通讯录"
            android:textColor="@color/color_109"
            android:textSize="@dimen/text_7"
            android:layout_marginLeft="13dp"
            android:paddingTop="7dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:paddingBottom="7dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_006" />
        <TextView
            android:id="@+id/tv_4"
            android:layout_width="84dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="担任职位"
            android:textSize="14sp"
            android:textColor="@color/color_100"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tv_position"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/color_100"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/text_5"
            android:ellipsize="end"
            android:textColorHint="@color/color_103"
            android:layout_toRightOf="@+id/tv_4"
            android:hint="请选择对方职位"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:drawableRight="@mipmap/arrow_down"
            android:singleLine="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_107"
        android:layout_height="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="沟通内容"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_7"
            android:textColor="@color/list_item_text_gray_color"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dialog_isfrist_used"
            android:background="@null"
            android:gravity="left|top"
            android:layout_marginTop="11dp"
            android:textColor="@color/color_100"
            android:textColorHint="@color/color_103"
            android:textSize="@dimen/text_5"
            android:hint="请输入本次的沟通内容"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/tv_content_count"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:text="0/300"
            android:textColor="@color/color_103"
            android:textSize="@dimen/text_8"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/color_107"
        android:layout_height="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="补充说明"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_7"
            android:textColor="@color/list_item_text_gray_color"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/tv_more"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/dialog_isfrist_used"
            android:background="@null"
            android:gravity="left|top"
            android:layout_marginTop="11dp"
            android:textColorHint="@color/color_103"
            android:textSize="14sp"
            android:textColor="@color/color_100"
            android:hint="如：对该机构的补充描述/整体评价/对方其他诉求/有无管理后台等您认为有意义的信息"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/tv_more_count"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_width="wrap_content"
            android:text="0/300"
            android:textColor="@color/color_103"
            android:textSize="@dimen/text_8"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>