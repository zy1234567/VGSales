<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_107"
    tools:context="com.ztstech.vgmate.activitys.setting.SettingActivity">


    <com.ztstech.vgmate.weigets.TopBar
        app:showBackNav="true"
        app:barTitle="设置"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.ztstech.vgmate.weigets.TopBar>

    <RelativeLayout
        android:id="@+id/rl_id"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="身份验证"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow_right_choice"
            android:id="@+id/tv_id"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="当前手机号"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow_right_choice"
            android:id="@+id/tv_phone"
            android:textColor="@color/color_104"
            android:textSize="@dimen/text_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_106" />


    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/arrow_right_choice"
            android:text="关于"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_106" />


    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:text="版本号"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_version"
            android:textColor="@color/color_104"
            android:textSize="@dimen/text_5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <TextView
        android:background="#fff"
        android:gravity="center"
        android:textColor="@color/color_006"
        android:textSize="@dimen/text_5"
        android:text="退出登录"
        android:id="@+id/tv_logout"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


</LinearLayout>
