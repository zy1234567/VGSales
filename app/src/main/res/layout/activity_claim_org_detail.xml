<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_109">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.ztstech.vgmate.weigets.TopBar
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:showBackNav="true"
        app:barTitle="认证审批"
        app:backgroundColor="@color/color_109">

    </com.ztstech.vgmate.weigets.TopBar>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_107"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/color_109"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/img_org"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构名字"
                android:textSize="@dimen/text_4"
                android:textColor="@color/color_100"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/phone"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:drawablePadding="2dp"
                android:layout_alignParentBottom="true"
                android:text="咨询电话"/>
            <TextView
                android:id="@+id/tv_otype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/lable"
                android:layout_below="@+id/tv_name"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:drawablePadding="2dp"
                android:layout_marginTop="2dp"
                android:text="钢琴|电子琴"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/location"
                android:layout_above="@+id/tv_phone"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:drawablePadding="2dp"
                android:layout_marginBottom="2dp"
                android:singleLine="true"
                android:text="地址"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="认领人相关信息"
        android:textSize="@dimen/text_7"
        android:background="@color/color_107"
        android:textColor="@color/color_102"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_109"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_real_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="真实姓名："/>
        <TextView
            android:id="@+id/tv_job"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5"
            android:layout_marginLeft="12dp"
            android:text="真实姓名："/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">
            <TextView
                android:id="@+id/tv_phone_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_100"
                android:textSize="@dimen/text_5"
                android:layout_marginLeft="12dp"
                android:text="手机号码："/>
            <TextView
                android:id="@+id/tv_claim_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_phone_hint"
                android:layout_alignTop="@+id/tv_phone_hint"
                android:textColor="@color/color_004"
                android:textSize="@dimen/text_5"
                android:text=""/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="相关证明"
        android:textSize="@dimen/text_7"
        android:background="@color/color_107"
        android:textColor="@color/color_102"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
    <LinearLayout
        android:id="@+id/ll_approve"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_107"
        android:gravity="center"
        android:visibility="visible"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="拒绝"
            android:textSize="@dimen/text_3"
            android:textColor="@color/color_109"
            android:gravity="center"
            android:background="@drawable/bg_c_2_f_006"
            android:id="@+id/tv_refuse" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="定位认证"
            android:textSize="@dimen/text_3"
            android:textColor="@color/color_109"
            android:gravity="center"
            android:background="@drawable/bg_c_2_f_001"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_location_pass" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="加V认证"
            android:textSize="@dimen/text_3"
            android:textColor="@color/color_100"
            android:gravity="center"
            android:background="@drawable/bg_c_2_f_005"
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_addv_pass" />

    </LinearLayout>
</RelativeLayout>