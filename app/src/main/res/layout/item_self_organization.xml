<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="#fff">



    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/weilai_color_001"
        android:orientation="vertical">

        <ImageView
            android:background="#f00"
            android:id="@+id/img_diagram"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
             />

        <LinearLayout
            android:id="@+id/layout_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_diagram"
            android:layout_alignTop="@id/img_diagram"
            android:layout_toRightOf="@+id/img_diagram"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginRight="70dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_relation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:singleLine="true"
                    android:text="嘉禾舞社"
                    android:textColor="@color/weilai_color_101"
                    android:textSize="@dimen/text_size_9" />

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/img_identify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/certified" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="李老师"
                    android:singleLine="true"
                    android:textColor="@color/weilai_color_105"
                    android:textSize="@dimen/text_size_5" />
                <TextView
                    android:id="@+id/img_teacher_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/phone_me"
                    android:drawablePadding="3dp"
                    android:text="18911970413"
                    android:singleLine="true"
                    android:textColor="@color/weilai_color_105"
                    android:textSize="@dimen/text_size_5" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/img_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/comment_default_8" />

                <TextView
                    android:id="@+id/tv_comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_toRightOf="@id/img_comment"
                    android:includeFontPadding="false"
                    android:text="22点评"
                    android:textColor="@color/weilai_color_105"
                    android:textSize="@dimen/text_size_5" />

                <TextView
                    android:id="@+id/tv_stu_par_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="12dp"
                    android:text="56"
                    android:visibility="gone"
                    android:textColor="@color/weilai_teacher_color"
                    android:textSize="@dimen/text_size_7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/tv_stu_par_count"
                    android:text="学员/家长："
                    android:visibility="gone"
                    android:textColor="@color/weilai_teacher_color"
                    android:textSize="@dimen/text_size_7" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_classify_big"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="乐器"
                    android:textColor="@color/weilai_color_104"
                    android:textSize="@dimen/text_size_7" />

                <TextView
                    android:id="@+id/tv_line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:includeFontPadding="false"
                    android:text="|"
                    android:textColor="@color/weilai_color_104"
                    android:textSize="@dimen/text_size_7" />

                <TextView
                    android:id="@+id/tv_classify_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="吉他"
                    android:textColor="@color/weilai_color_104"
                    android:textSize="@dimen/text_size_7" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/img_diagram"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:drawableLeft="@mipmap/location_default_gray"
            android:drawablePadding="1dp"
            android:includeFontPadding="false"
            android:text="1.5km"
            android:textColor="@color/weilai_color_104"
            android:textSize="@dimen/text_size_7" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/img_diagram"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/img_diagram"
            android:background="@color/weilai_color_006" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/selected"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/tv_concerned"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:text="已关注"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_self_organization_tag_yellow"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textColor="@color/weilai_color_104"
            android:textSize="@dimen/text_size_5"
            android:visibility="visible" />
        <!--<TextView-->
        <!--android:id="@+id/tv_concerned"-->
        <!--android:layout_width="65dp"-->
        <!--android:layout_height="25dp"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_marginRight="12dp"-->
        <!--android:layout_marginTop="10dp"-->
        <!--android:background="@drawable/bg_gray_border_007_angle_2_1px"-->
        <!--android:drawableLeft="@mipmap/ico_focus_each_other"-->
        <!--android:gravity="center"-->
        <!--android:paddingLeft="6dp"-->
        <!--android:paddingRight="6dp"-->
        <!--android:text="已互关"-->
        <!--android:textColor="@color/weilai_color_101"-->
        <!--android:textSize="@dimen/text_size_5"-->
        <!--android:visibility="visible" />-->

        <TextView
            android:id="@+id/tv_add_concern"
            android:layout_width="65dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_c_2_s_003_f_001"
            android:drawableLeft="@mipmap/ico_add"
            android:gravity="center"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="加关注"
            android:textColor="@color/weilai_color_003"
            android:textSize="@dimen/text_size_5"
            android:visibility="invisible" />

        <View
            android:id="@+id/line_divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="12dp"
            android:background="@color/weilai_color_006" />
    </RelativeLayout>

    <View
        android:background="@color/color_107"
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <RelativeLayout
        android:layout_marginLeft="90dp"
        android:layout_width="match_parent"
        android:layout_height="42dp">

        <TextView
            android:id="@+id/tv_seller"
            android:text="销售：李珊珊"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_7"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_custom"
            android:layout_centerVertical="true"
            android:text="客服：小王子"
            android:layout_toEndOf="@id/tv_seller"
            android:layout_toRightOf="@id/tv_seller"
            android:textSize="@dimen/text_7"
            android:textColor="@color/color_102"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_8"
            android:background="@drawable/bg_self_organization_show_more"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="更多详情"
            android:gravity="center"
            android:layout_width="58dp"
            android:layout_height="22dp" />

    </RelativeLayout>

</LinearLayout>