<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_home"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_dismiss"
        android:layout_width="match_parent"
        android:background="@color/color_107"
        android:layout_height="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_006" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="实地定位"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_7"
            android:textColor="@color/list_item_text_gray_color"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_location"
        android:layout_below="@+id/rl_dismiss"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:drawableRight="@mipmap/arrow"
        android:layout_marginRight="@dimen/dialog_isfrist_used"
        android:layout_marginLeft="@dimen/dialog_isfrist_used"
        android:textColorHint="@color/color_103"
        android:textSize="14sp"
        android:textColor="@color/color_100"
        android:hint="请定位（100m范围内即可）"
        android:layout_height="45dp" />
    <RelativeLayout
        android:id="@+id/rl_photo"
        android:layout_below="@+id/tv_location"
        android:layout_width="match_parent"
        android:background="@color/color_107"
        android:layout_height="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_006" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="实地拍照"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="@dimen/text_7"
            android:textColor="@color/list_item_text_gray_color"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <com.ztstech.vgmate.weigets.CustomGridView
        android:id="@+id/cgv"
        android:layout_below="@+id/rl_photo"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_height="wrap_content">
    </com.ztstech.vgmate.weigets.CustomGridView>

</LinearLayout>