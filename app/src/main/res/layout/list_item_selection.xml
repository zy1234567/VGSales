<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fragment_my_info_h_1"
    android:background="@color/list_item_title_txt_color_14">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_my_info_h_1"
        android:gravity="left|center_vertical"
        android:paddingLeft="25dp"
        android:textColor="@color/list_item_title_txt_color_1"
        android:textSize="@dimen/list_item_title_txt_size_8" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/fragment_my_info_h_1"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/default_margin_l_r">

        <ImageView
            android:id="@+id/img_selected"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fragment_my_info_h_1"
            android:scaleType="centerInside"
            android:src="@mipmap/picked"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>