<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ztstech.vgmate.activitys.article_detail.ArticleDetailActivity">

    <com.ztstech.vgmate.weigets.TopBar
        app:showBackNav="true"
        android:id="@+id/top_bar"
        app:barTitle=""
        app:srcRight="@mipmap/ico_edit_notice"
        app:backgroundColor="@color/color_109"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.ztstech.vgmate.weigets.TopBar>
    <ProgressBar
        android:id="@+id/pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/progress_bar_h_1"
        android:max="100"
        android:progressDrawable="@drawable/webview_pb_states" />
    <WebView
        android:layout_weight="1"
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </WebView>

    <include
        layout="@layout/layout_comment_bar" />

</LinearLayout>
