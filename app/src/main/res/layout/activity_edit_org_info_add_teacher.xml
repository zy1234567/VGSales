<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_107"
    android:orientation="vertical"
    tools:context="com.ztstech.vgmate.activitys.complete_org_info_v2.subview.teacher.EditOrgInfoAddTeacherActivity">

    <com.ztstech.vgmate.weigets.TopBar
        android:id="@+id/top_bar"
        app:textRight="保存"
        app:barTitle="添加教师／教练"
        android:background="#fff"
        app:showBackNav="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.ztstech.vgmate.weigets.TopBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:paddingTop="25dp"
                android:paddingBottom="25dp"
                android:id="@+id/rl_header"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_header"
                    android:background="#f00"
                    android:layout_centerHorizontal="true"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
            </RelativeLayout>


            <LinearLayout
                android:background="#fff"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textSize="@dimen/text_7"
                    android:textColor="@color/color_100"
                    android:text="* 姓名"
                    android:gravity="center_vertical|end"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_name"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/color_103"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_7"
                    android:hint="请输入"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_106" />

            <LinearLayout
                android:background="#fff"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textSize="@dimen/text_7"
                    android:textColor="@color/color_100"
                    android:text="* 职位"
                    android:gravity="center_vertical|end"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/et_class"
                    android:drawableRight="@mipmap/arrow_right_choice"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/color_103"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_7"
                    android:hint="如：英语外教、健身教练等（不超过6个字）"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_106" />

            <LinearLayout
                android:background="#fff"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textSize="@dimen/text_7"
                    android:textColor="@color/color_100"
                    android:text="性别"
                    android:gravity="center_vertical|end"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:drawableRight="@mipmap/arrow_right_choice"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/color_103"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_7"
                    android:hint="请选择"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_106" />

            <LinearLayout
                android:background="#fff"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">

                <TextView
                    android:textSize="@dimen/text_7"
                    android:textColor="@color/color_100"
                    android:text="年龄"
                    android:gravity="center_vertical|end"
                    android:layout_width="40dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:drawableRight="@mipmap/arrow_right_choice"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/color_103"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_7"
                    android:hint="请选择"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_106" />

            <RelativeLayout
                android:orientation="horizontal"
                android:background="#fff"
                android:paddingRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:id="@+id/tv_desc_title"
                    android:textSize="@dimen/text_7"
                    android:textColor="@color/color_100"
                    android:text="简介"
                    android:gravity="center_vertical|end"
                    android:layout_width="40dp"
                    android:layout_height="45dp" />

                <EditText
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:gravity="top"
                    android:layout_toRightOf="@id/tv_desc_title"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColorHint="@color/color_103"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_7"
                    android:hint="请输入"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="100dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_delete"
                android:textColor="@color/color_006"
                android:textSize="@dimen/text_3"
                android:layout_marginTop="25dp"
                android:background="#fff"
                android:gravity="center"
                android:text="删除"
                android:layout_width="match_parent"
                android:layout_height="45dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
