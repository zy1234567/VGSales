<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ztstech.vgmate.activitys.complete_info.FillInfoActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_bar_height">

        <ImageView

            android:src="@mipmap/return_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_2"
            android:text="完善身份资料"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_105" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:textColor="@color/color_102"
                android:textSize="@dimen/text_7"
                android:text="基本资料"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:background="@color/color_107"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_header_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="头像"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_header_arrow"
                    android:src="@mipmap/arrow_right_choice"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/img_header"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/img_header_arrow"
                    android:background="#f00"
                    android:layout_width="45dp"
                    android:layout_height="45dp" />

                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请上传"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_header_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_106" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_name_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="姓名"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />


                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请填写"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_name_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_106" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_gender_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="性别"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_gender_arrow"
                    android:src="@mipmap/arrow_right_choice"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请选择"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_gender_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_106" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_age_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="年龄"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_age_arrow"
                    android:src="@mipmap/arrow_right_choice"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请选择"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_age_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_106" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_location_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="常驻地"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/img_location_arrow"
                    android:src="@mipmap/arrow_right_choice"
                    android:layout_marginRight="12dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请选择"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_location_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:textColor="@color/color_102"
                android:textSize="@dimen/text_7"
                android:text="身份证信息"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:background="@color/color_107"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_id_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="身份证"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请填写"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_id_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:textColor="@color/color_102"
                android:textSize="@dimen/text_7"
                android:text="银行卡信息"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:background="@color/color_107"
                android:layout_width="match_parent"
                android:layout_height="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_card_user_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="持卡人"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请填写"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_card_user_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_106" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_card_num_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="卡号"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请填写"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_card_num_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_106" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/tv_card_bank_title"
                    android:textColor="@color/color_100"
                    android:textSize="@dimen/text_5"
                    android:gravity="center_vertical"
                    android:text="开户行"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_width="75dp"
                    android:layout_height="match_parent" />

                <android.support.design.widget.TextInputEditText
                    android:textSize="@dimen/text_5"
                    android:textColorHint="@color/color_103"
                    android:hint="请填写"
                    android:enabled="false"
                    android:layout_toRightOf="@id/tv_card_bank_title"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:textColor="@color/color_102"
                android:textSize="@dimen/text_7"
                android:text="上传相关照片"
                android:gravity="center_vertical"
                android:paddingLeft="12dp"
                android:background="@color/color_107"
                android:layout_width="match_parent"
                android:layout_height="25dp" />
            
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="12dp"
                    android:gravity="center_horizontal"
                    android:text="上传身份证正面"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/front_idcard"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:gravity="center_horizontal"
                    android:text="上传身份证反面"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/back_idcard"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginRight="12dp"
                    android:gravity="center_horizontal"
                    android:text="上传银行卡正面"
                    android:drawablePadding="6dp"
                    android:drawableTop="@mipmap/front_bankcard"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>

            <TextView
                android:onClick="onSubmitClick"
                android:background="@drawable/sel_fillinfo_submit"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:textSize="@dimen/text_3"
                android:textColor="@color/color_109"
                android:enabled="true"
                android:text="提交"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>
