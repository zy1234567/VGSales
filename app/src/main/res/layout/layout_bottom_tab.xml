<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_weight="1"
        android:background="@color/bottom_bar_bg_color"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_h_2"
            android:background="@color/list_item_title_txt_color_3" />
        <LinearLayout
            android:id="@+id/lt_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_share"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/tab_s_1"/>
            <TextView
                android:id="@+id/txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:singleLine="true"
                android:text="首页"
                android:textColor="#999"
                android:textSize="9dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_1_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_main_tab_num_margin_left"
            android:layout_toRightOf="@+id/lt_1"
            android:src="@drawable/circle"
            android:gravity="center"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/zhixun_refresh_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/lt_1"
            android:src="@mipmap/zhixun_refresh"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"

        android:layout_weight="1"
        android:background="@color/bottom_bar_bg_color" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_h_2"
            android:background="@color/list_item_title_txt_color_3" />
        <LinearLayout
            android:id="@+id/lt_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/img_chance"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/tab_s_2"/>
            <TextView
                android:id="@+id/txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:text="分享"
                android:textColor="#999"
                android:textSize="9dp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/jihui_refresh_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/lt_2"
            android:src="@mipmap/zhixun_refresh"
            android:visibility="gone"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"

        android:layout_weight="1"
        android:background="@color/bottom_bar_bg_color" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_h_2"
            android:background="@color/list_item_title_txt_color_3" />

        <TextView
            android:id="@+id/txt_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:drawableTop="@drawable/tab_s_3"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="交流"
            android:paddingBottom="4dp"
            android:textColor="#999"
            android:textSize="9dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/txt_4_hint_2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/activity_main_tab_num_margin_left"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/txt_4"
            android:background="@drawable/nums"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text=""
            android:textColor="@color/txt_white_color"
            android:textSize="12sp"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottom_bar_height"
        android:layout_weight="1"
        android:background="@color/bottom_bar_bg_color" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/split_h_2"
            android:background="@color/list_item_title_txt_color_3" />

        <TextView
            android:id="@+id/txt_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:layout_centerHorizontal="true"
            android:drawableTop="@drawable/tab_s_4"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="我的"
            android:textColor="#999"
            android:textSize="9dp" />

        <TextView
            android:id="@+id/txt_5_hint_1"
            android:layout_width="@dimen/activity_main_tab_hint_w_2"
            android:layout_height="@dimen/activity_main_tab_hint_w_2"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="@dimen/activity_main_tab_num_margin_left_2"
            android:layout_toRightOf="@+id/txt_5"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textColor="@color/txt_white_color"
            android:textSize="@dimen/list_item_title_txt_size_3"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_5_hint_2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/activity_main_tab_num_margin_left"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/txt_5"
            android:background="@drawable/nums"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:textColor="@color/txt_white_color"
            android:textSize="12sp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/txt_5_hint_3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginLeft="@dimen/activity_main_tab_num_margin_left"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/txt_5"
            android:background="@drawable/nums"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="0"
            android:visibility="gone"
            android:textColor="@color/txt_white_color"
            android:textSize="12sp"
            />

    </RelativeLayout>
</LinearLayout>