<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_remote"
    android:visibility="visible"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/ll_wx"
        android:layout_below="@+id/rg_button"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/color_107"
        android:layout_height="25dp">
        <TextView

            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:text="微信审核"
            android:textSize="@dimen/text_7"
            android:textColor="@color/color_100"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:text=" (请通过微信的“视频通话”和“共享实时位置”来审核)"
            android:textSize="@dimen/text_7"
            android:textColor="@color/zhihu_album_dropdown_count_text"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_below="@+id/ll_wx"
        android:gravity="center"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="微信号码"
            android:layout_marginLeft="12dp"
            android:textSize="14sp"
            android:textColor="@color/color_100"
            />
        <EditText
            android:id="@+id/tv_name"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:textColor="@color/color_100"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/text_5"
            android:ellipsize="end"
            android:textColorHint="@color/color_103"
            android:layout_toRightOf="@+id/tv_1"
            android:hint="请输入对方的微信号"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:singleLine="true"/>
    </RelativeLayout>
    <View
        android:id="@+id/v1"
        android:layout_below="@id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/dialog_isfrist_used"
        android:background="@color/color_107"
        />
    <RelativeLayout
        android:id="@+id/rl_img"
        android:layout_below="@id/v1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="103dp">
        <ImageView
            android:layout_marginLeft="12dp"
            android:id="@+id/img_vido"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/shipin_upload"
            android:layout_height="80dp" />
        <ImageView
            android:id="@+id/img_location"
            android:layout_toRightOf="@+id/img_vido"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_width="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/weizhi_upload"
            android:layout_height="80dp" />
    </RelativeLayout>
</RelativeLayout>