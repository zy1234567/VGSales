<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_109"
    android:id="@+id/body"
    android:paddingBottom="10dp">
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_107"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_109"
        android:paddingTop="6dp">
        <TextView
            android:id="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_8"
            android:textColor="@color/color_102"
            android:layout_marginLeft="12dp"
            android:text="来源：网络获取" />
        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_8"
            android:textColor="@color/color_102"
            android:layout_marginRight="12dp"
            android:text="已确认"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/color_106"
        android:layout_marginTop="6dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_org"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="73dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="12dp">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="机构名字"
                android:textSize="@dimen/text_4"
                android:textColor="@color/color_100"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/phone"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:drawablePadding="2dp"
                android:layout_alignParentBottom="true"
                android:text="咨询电话"/>
            <TextView
                android:id="@+id/tv_otype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/lable"
                android:layout_below="@+id/tv_name"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:drawablePadding="2dp"
                android:layout_marginTop="2dp"
                android:text="钢琴|电子琴"/>
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/location"
                android:layout_above="@+id/tv_phone"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:drawablePadding="2dp"
                android:layout_marginBottom="2dp"
                android:singleLine="true"
                android:text="地址"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>