<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="15dp">


    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/iv_title"
        android:background="#f00"
        android:layout_width="73dp"
        android:layout_height="73dp" />

    <TextView
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/color_100"
        android:textSize="@dimen/text_4"
        android:id="@+id/tv_title"
        android:layout_toRightOf="@id/iv_title"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_alignBottom="@id/iv_title"
        android:layout_below="@id/tv_title"
        android:ellipsize="end"
        android:layout_alignLeft="@id/tv_title"
        android:gravity="top"
        android:lines="3"
        android:maxLines="3"
        android:id="@+id/tv_content"
        android:textColor="@color/color_101"
        android:textSize="@dimen/text_7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="12dp"
        android:layout_alignLeft="@id/iv_title"
        android:layout_below="@id/iv_title"
        android:textColor="@color/color_102"
        android:textSize="@dimen/text_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_comment_count"
        android:textColor="@color/color_102"
        android:textSize="@dimen/text_8"
        android:layout_alignTop="@id/tv_time"
        android:layout_alignBottom="@id/tv_time"
        android:drawableLeft="@mipmap/comment_home"
        android:drawablePadding="5dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <View
        android:layout_below="@id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_106" />

</RelativeLayout>