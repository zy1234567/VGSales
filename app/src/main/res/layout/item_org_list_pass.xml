<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#fff">

    <RelativeLayout
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/tv_id"
            android:lines="1"
            android:text="ID:12345678"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_8"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_city"
            android:layout_alignParentRight="true"
            android:lines="1"
            android:text="北京市 西城区"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_8"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e3e4e5"
        />


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:id="@+id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:lines="1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_date"
            android:text="嘉禾屋舍"
            android:textStyle="bold"
            android:textSize="@dimen/text_4"
            android:textColor="@color/color_100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_date"
            android:layout_centerVertical="true"
            android:text="2017-09-09"
            android:textSize="@dimen/text_8"
            android:textColor="@color/color_102"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        </RelativeLayout>

    <TextView
        android:id="@+id/tv_tag_title"
        android:text="分类标签："
        android:textColor="@color/color_102"
        android:textSize="@dimen/text_7"
        android:layout_marginTop="10dp"
        android:layout_below="@id/rl_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_tag"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_7"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/tv_tag_title"
            android:layout_alignTop="@id/tv_tag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/tv_location_title"
            android:layout_marginTop="10dp"
            android:layout_below="@id/tv_tag"
            android:text="详细地址："
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_location"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_7"
            android:layout_toRightOf="@id/tv_location_title"
            android:layout_alignTop="@id/tv_location_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_phone_title"
            android:text="咨询电话："
            android:layout_below="@id/tv_location"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_7"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="010-29182940"
            android:layout_toRightOf="@id/tv_phone_title"
            android:layout_marginBottom="15dp"
            android:id="@+id/tv_phone"
            android:layout_alignTop="@id/tv_phone_title"
            android:textColor="@color/color_004"
            android:textSize="@dimen/text_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </RelativeLayout>




</LinearLayout>