<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_30_000">
    
    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="@drawable/bg_c_10"
        android:layout_width="300dp"
        android:layout_height="150dp">
        
        <TextView
            android:id="@+id/tv_cancel"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_2"
            android:gravity="center"
            android:text="取消"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="55dp" />
        
        <View
            android:id="@+id/line_divider"
            android:layout_toRightOf="@id/tv_cancel"
            android:layout_alignParentBottom="true"
            android:layout_width="0.5dp"
            android:layout_height="55dp"
            android:background="@color/color_106" />


        <TextView
            android:layout_toRightOf="@id/line_divider"
            android:id="@+id/tv_confirm"
            android:textColor="@color/color_001"
            android:textSize="@dimen/text_2"
            android:gravity="center"
            android:text="确定"
            android:layout_alignParentBottom="true"
            android:layout_width="150dp"
            android:layout_height="55dp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_106"
            android:layout_above="@id/tv_cancel" />

        <TextView
            android:id="@+id/tv_message"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_2"
            android:gravity="center"
            android:layout_above="@id/line"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

</RelativeLayout>