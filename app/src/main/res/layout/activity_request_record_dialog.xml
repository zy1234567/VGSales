<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000"
    tools:context="com.ztstech.vgmate.activitys.request_record_detail.RequestRecordDialogActivity"
    >

    <RelativeLayout
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:layout_width="339dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_header"
            android:background="@drawable/bg_c_0_10_10_0_f_008"
            android:layout_width="match_parent"
            android:layout_height="88dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_title"
                android:layout_marginLeft="14dp"
                android:layout_centerVertical="true"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#f00"/>

            <TextView
                android:text="上海起跳j联盟"
                android:textStyle="bold"
                android:textColor="@color/color_109"
                android:textSize="@dimen/text_4"
                android:layout_marginRight="15dp"
                android:lines="2"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/img_title"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:background="@drawable/bg_c_10_0_0_10_f_fff"
            android:orientation="vertical"
            android:layout_below="@id/rl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="申请项目：免服务费年数申请"
                android:textSize="@dimen/text_4"
                android:textColor="@color/color_001"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"/>
            
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_height="327dp">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>
        
        <ImageView
            android:scaleType="centerCrop"
            android:layout_marginTop="16dp"
            android:layout_below="@id/ll_bottom"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>






</RelativeLayout>
