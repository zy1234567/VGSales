<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ll_select_normal_001_to_006">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_107"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="12dp">
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_8"
            android:text="最近登录"/>

        <TextView
            android:id="@+id/tv_degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_8"
            android:layout_marginLeft="20dp"
            android:text="周登录"/>

        <TextView
            android:id="@+id/tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_8"
            android:text="成为伙伴"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_106"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/pre_default_image"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="@dimen/text_4"
            android:textColor="@color/color_100"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@+id/img_head"/>
        <LinearLayout
            android:id="@+id/age_layout"
            android:layout_width="35dp"
            android:layout_height="15dp"
            android:background="@drawable/zts_alter_sex_man"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_age"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginLeft="8dp"
                android:src="@mipmap/space_woman" />

            <TextView
                android:id="@+id/tv_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="4dp"
                android:includeFontPadding="false"
                android:text="25"
                android:textColor="@color/weilai_color_001"
                android:textSize="10sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_address_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="常驻地："
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="-1.5dp"
            android:layout_toRightOf="@+id/img_head"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_7" />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京市"
            android:layout_marginTop="-1.5dp"
            android:layout_below="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_address_hint"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_7" />
        <TextView
            android:id="@+id/tv_duty_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="责任人："
            android:textSize="@dimen/text_7"
            android:textColor="@color/color_102"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/img_head"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tv_duty_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="@dimen/text_7"
            android:textColor="@color/color_004"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/tv_duty_hint"
            android:layout_alignParentBottom="true"/>


        <TextView
            android:id="@+id/tv_intro_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="介绍人："
            android:textSize="@dimen/text_7"
            android:textColor="@color/color_102"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/tv_duty_name"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tv_intro_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="@dimen/text_7"
            android:textColor="@color/color_004"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/tv_intro_hint"
            android:layout_alignParentBottom="true"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16666666666"
            android:textSize="@dimen/text_9"
            android:textColor="@color/color_004"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="15.5dp"
            android:layout_alignBaseline="@+id/age_layout"
            android:layout_toRightOf="@+id/age_layout" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_106"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_org_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:text="客户跟进"/>
            <TextView
                android:id="@+id/tv_num_org"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_100"
                android:layout_marginTop="3dp"
                android:text="13家"/>

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/color_106"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_invite_mate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:text="邀请伙伴"/>
            <TextView
                android:id="@+id/tv_num_invite_mate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_100"
                android:layout_marginTop="3dp"
                android:text="13家"/>

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/color_106"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_mate_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:text="伙伴跟进"/>
            <TextView
                android:id="@+id/tv_num_mate_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_100"
                android:layout_marginTop="3dp"
                android:text="13家"/>

        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="30dp"
            android:background="@color/color_106"
            android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:id="@+id/ll_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_102"
                android:text="预计收入"/>
            <TextView
                android:id="@+id/tv_num_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_7"
                android:textColor="@color/color_100"
                android:layout_marginTop="3dp"
                android:text="13家"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>