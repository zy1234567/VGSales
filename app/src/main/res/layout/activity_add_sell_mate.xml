<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_107"
    tools:context="com.ztstech.vgmate.activitys.add_sell_mate.AddSellMateActivity">

    <com.ztstech.vgmate.weigets.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.ztstech.vgmate.weigets.TopBar>

    <RelativeLayout
        android:background="#fff"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_name_title"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5" />


        <EditText
            android:textCursorDrawable="@null"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_name_title"
            android:background="@null"
            android:enabled="true"
            android:hint="请输入姓名"
            android:textColorHint="@color/color_103"
            android:textSize="@dimen/text_5" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_106" />
    <RelativeLayout
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_phone_title"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5" />

        <TextView
            android:layout_marginRight="12dp"
            android:id="@+id/tv_contact"
            android:gravity="center"
            android:text="手机通讯录"
            android:textColor="#fff"
            android:background="@drawable/bg_c_2_f_001"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="30dp" />


        <android.support.design.widget.TextInputEditText
            android:layout_toLeftOf="@id/tv_contact"
            android:layout_marginRight="8dp"
            android:textCursorDrawable="@null"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_phone_title"
            android:background="@null"
            android:enabled="true"
            android:inputType="phone"
            android:hint="请输入手机号码"
            android:textColorHint="@color/color_103"
            android:textSize="@dimen/text_5" />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_106" />
    <RelativeLayout
        android:background="#fff"

        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_id_title"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="身份证"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5" />


        <android.support.design.widget.TextInputEditText
            android:textCursorDrawable="@null"
            android:layout_marginRight="12dp"
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_id_title"
            android:background="@null"
            android:enabled="true"
            android:hint="请输入身份证号"
            android:textColorHint="@color/color_103"
            android:textSize="@dimen/text_5" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_106" />
    <RelativeLayout
        android:background="#fff"

        android:layout_width="match_parent"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/tv_location_title"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:text="常驻地"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_5" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/arrow_right_choice" />


        <TextView
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:textCursorDrawable="@null"
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/tv_location_title"
            android:background="@null"
            android:enabled="true"
            android:hint="选择所在地区"
            android:textColorHint="@color/color_103"
            android:textSize="@dimen/text_5" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_106" />


    <CheckBox
        android:id="@+id/cb_send_code"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:text="发送短信通知"
        android:textColor="@color/color_102"
        android:textSize="@dimen/text_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:id="@+id/btn_submit"
        android:textColor="#fff"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:background="@drawable/sel_fillinfo_submit"
        android:text="提交"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
