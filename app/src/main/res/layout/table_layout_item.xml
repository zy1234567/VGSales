<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tab_text"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_4"
        android:textColor="@color/color_100"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_tab_num"
        android:layout_width="19dp"
        android:layout_height="13dp"
        android:textSize="@dimen/text_9"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:textColor="@color/color_109"
        android:layout_toRightOf="@+id/tab_text"
        android:background="@drawable/bg_red_hint"/>
</RelativeLayout>