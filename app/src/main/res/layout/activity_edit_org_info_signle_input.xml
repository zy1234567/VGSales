<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_107"
    tools:context="com.ztstech.vgmate.activitys.complete_org_info_v2.subview.signle_line.EditOrgInfoSignleInputActivity">

    <com.ztstech.vgmate.weigets.TopBar
        android:background="#fff"
        android:id="@+id/top_bar"
        app:showBackNav="true"
        app:textRight="保存"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.ztstech.vgmate.weigets.TopBar>

    <EditText
        android:lines="1"
        android:maxLines="1"
        android:singleLine="true"
        android:background="#fff"
        android:layout_marginTop="8dp"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:hint="请输入..."
        android:textSize="@dimen/text_5"
        android:textColorHint="@color/color_103"
        android:textColor="@color/color_100"
        android:id="@+id/et_content"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
</LinearLayout>
