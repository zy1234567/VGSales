<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_107"
    tools:context="com.ztstech.vgmate.activitys.create_share_add_cover.CreateShareAddCoverActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.ztstech.vgmate.weigets.TopBar
            app:barTitle="设置封面"
            app:showBackNav="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.ztstech.vgmate.weigets.TopBar>

        <TextView
            android:id="@+id/tv_next"
            android:enabled="false"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:background="@drawable/sel_share_next"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="发布"
            android:textColor="@color/color_109"
            android:textSize="@dimen/text_7"
            android:layout_width="51dp"
            android:layout_height="23dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:paddingLeft="12dp"
        android:paddingTop="15dp">


        <ImageView
            android:id="@+id/img"
            android:layout_width="112dp"
            android:layout_height="73dp"
            android:layout_centerVertical="true"
            android:background="#f00" />

        <TextView
            android:id="@+id/tv_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@id/img"
            android:ellipsize="end"
            android:lines="2"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_4" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:layout_alignLeft="@id/tv_item_title"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_8" />


    </RelativeLayout>
</LinearLayout>
