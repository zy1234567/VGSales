<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="140dp"
    android:background="#fff"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_add_friend"
        android:textColor="@color/color_100"
        android:textSize="@dimen/text_5"
        android:gravity="center"
        android:text="添加伙伴"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_106" />

    <TextView
        android:id="@+id/tv_add_org"
        android:textColor="@color/color_100"
        android:textSize="@dimen/text_5"
        android:gravity="center"
        android:text="添加机构"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_106" />

    <TextView
        android:id="@+id/tv_share_info"
        android:textColor="@color/color_100"
        android:textSize="@dimen/text_5"
        android:gravity="center"
        android:text="发布资讯"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_106" />

    <TextView
        android:id="@+id/tv_share_notice"
        android:textColor="@color/color_100"
        android:textSize="@dimen/text_5"
        android:gravity="center"
        android:text="发布公告"
        android:paddingRight="13dp"
        android:paddingLeft="13dp"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


</LinearLayout>