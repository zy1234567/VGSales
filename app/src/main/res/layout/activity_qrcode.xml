<?xml version="1.0" encoding="utf-8"?>
<com.ztstech.vgmate.weigets.BlurFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ztstech.vgmate.activitys.qr_code.confirm.QRCodeLoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_marginTop="128dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/map"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_2"
            android:id="@+id/tv_info"
            android:text="蔚来地图WEB端扫码登录确认"
            android:layout_marginTop="16dp"
            android:layout_below="@id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:background="@drawable/bg_c_22_f_001"
            android:gravity="center"
            android:id="@+id/tv_login"
            android:text="登录"
            android:textColor="@color/color_109"
            android:textSize="@dimen/text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:layout_below="@id/tv_info"
            android:layout_width="230dp"
            android:layout_height="45dp" />

        <TextView
            android:background="@drawable/bg_c_22_s_102"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:text="取消"
            android:textColor="@color/color_100"
            android:textSize="@dimen/text_2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_below="@id/tv_login"
            android:layout_width="230dp"
            android:layout_height="45dp" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_close"
            android:src="@mipmap/close_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</com.ztstech.vgmate.weigets.BlurFrameLayout>
