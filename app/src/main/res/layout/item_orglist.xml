<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:layout_marginTop="8dp">


    <TextView
        android:gravity="center_vertical"
        android:text="来源：58同城 2017-09-09"
        android:textSize="@dimen/text_9"
        android:textColor="@color/color_102"
        android:layout_marginLeft="12dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />
    
    <TextView
        android:text="北京市 西城区"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_9"
        android:textColor="@color/color_102"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

    <View
        android:id="@+id/line"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_106" />
    
    <ImageView
        android:id="@+id/img"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_below="@id/line"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:background="#f00"/>

    <TextView
        android:id="@+id/tv_title"
        android:text="五道口成人钢琴吉他培训中心大提琴小提琴管风琴"
        android:textStyle="bold"
        android:textColor="@color/color_100"
        android:textSize="@dimen/text_4"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/img"
        android:layout_alignTop="@id/img"
        android:ellipsize="end"
        android:lines="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_title"
        android:layout_alignRight="@id/tv_title"
        android:layout_alignLeft="@id/tv_title"
        android:orientation="vertical"
        android:layout_alignBottom="@id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <TextView
        android:drawablePadding="6dp"
        android:gravity="top"
        android:layout_weight="1"
        android:includeFontPadding="false"
        android:id="@+id/tv_tag"
        android:lines="1"
        android:text="乐器 | 吉他 钢琴 小提琴"
        android:textColor="@color/color_102"
        android:textSize="@dimen/text_7"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:drawablePadding="6dp"
        android:layout_weight="1"
        android:id="@+id/tv_location"
        android:ellipsize="end"
        android:lines="1"
        android:text="海淀 - 清华大学 - 成府路五道口清华商会动105号商家大院中心"
        android:textSize="@dimen/text_7"
        android:textColor="@color/color_102"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <TextView
        android:drawablePadding="6dp"
        android:gravity="bottom"
        android:layout_weight="1"
        android:id="@+id/tv_phone"
        android:ellipsize="end"
        android:lines="1"
        android:text="资讯电话：400-123456"
        android:textColor="@color/color_004"
        android:textSize="@dimen/text_7"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="92dp"
        android:layout_below="@id/img"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_106" />

    <RelativeLayout
        android:layout_marginRight="12dp"
        android:layout_alignLeft="@id/line2"
        android:layout_below="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="35dp">


        <TextView
            android:id="@+id/tv_id"
            android:textSize="@dimen/text_7"
            android:textColor="@color/color_102"
            android:gravity="center_vertical"
            android:text="id 1234567890"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            />
        <TextView
            android:gravity="center"
            android:textColor="@color/color_102"
            android:textSize="@dimen/text_9"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_id"
            android:background="@drawable/bg_c_2_s_102"
            android:text="复制"
            android:layout_width="32dp"
            android:layout_height="15dp" />
        
        <TextView
            android:background="@drawable/bg_c_2_f_003"
            android:textSize="@dimen/text_9"
            android:textColor="@color/color_109"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="疑似重复"
            android:layout_width="48dp"
            android:layout_height="15dp" />
    </RelativeLayout>



</RelativeLayout>