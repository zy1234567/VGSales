<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/weilai_color_001"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/weilai_color_006" />

    <RelativeLayout
        android:id="@+id/rl_punch_card"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textColor="@color/weilai_color_003">

        <TextView
            android:id="@+id/tv_punch_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="提示"
            android:textColor="@color/weilai_color_104"
            android:textSize="@dimen/text_size_1" />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/weilai_color_006"/>

    <TextView
        android:id="@+id/tv_resend"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="重新发送"
        android:textColor="@color/color_001"
        android:textSize="@dimen/text_size_1"
        />

    <View
        android:id="@+id/line_add_to"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/weilai_color_006" />



    <TextView
        android:id="@+id/tv_ediit_resend"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="编辑并重新发送"
        android:textColor="@color/color_001"
        android:textSize="@dimen/text_size_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/weilai_color_006" />

    <TextView
        android:id="@+id/tv_delete"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="删除"
        android:textColor="@color/weilai_color_106"
        android:textSize="@dimen/text_size_1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10pt"
        android:background="@color/weilai_color_002" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/weilai_color_101"
        android:textSize="@dimen/text_size_1" />
</LinearLayout>