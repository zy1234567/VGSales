<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ztstech.vgmate.activitys.provide_chance.ProvideChanceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.ztstech.vgmate.weigets.TopBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barTitle="提供销售机会"
            app:showBackNav="true">

        </com.ztstech.vgmate.weigets.TopBar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/color_107"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="基本资料"
                    android:textColor="@color/color_102"
                    android:textSize="@dimen/text_7" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:text="机构名"
                        android:textColor="@color/color_100"
                        android:textSize="@dimen/text_5" />


                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_name"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="请填写机构名称"
                        android:textColorHint="@color/color_103"
                        android:textSize="@dimen/text_5" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_106" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tv_tag_title"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:text="标签"
                        android:textColor="@color/color_100"
                        android:textSize="@dimen/text_5" />

                    <ImageView
                        android:id="@+id/img_tag_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/arrow_right_choice" />


                    <TextView
                        android:id="@+id/tv_tag"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/img_tag_arrow"
                        android:layout_toRightOf="@id/tv_tag_title"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:hint="请选择机构标签"
                        android:textColorHint="@color/color_103"
                        android:textSize="@dimen/text_5" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_106" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:text="所在地"
                        android:textColor="@color/color_100"
                        android:textSize="@dimen/text_5" />

                    <ImageView
                        android:id="@+id/img_location_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/arrow_right_choice" />


                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/img_location_arrow"
                        android:layout_toRightOf="@id/tv_location"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="请选择机构所在地"
                        android:textColorHint="@color/color_103"
                        android:textSize="@dimen/text_5" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_106" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:text="手机号"
                        android:textColor="@color/color_100"
                        android:textSize="@dimen/text_5" />

                    <ImageView
                        android:id="@+id/img_header_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:src="@mipmap/arrow_right_choice" />

                    <!--<ImageView-->
                    <!--android:id="@+id/img_header"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--android:layout_toLeftOf="@id/img_header_arrow"-->
                    <!--android:background="#f00"-->
                    <!--android:layout_width="45dp"-->
                    <!--android:layout_height="45dp" />-->

                    <TextView
                        android:id="@+id/tv_to_contact"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/bg_provide_chance_contact"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:text="手机通讯录"
                        android:textColor="@color/color_109" />

                    <android.support.design.widget.TextInputEditText

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="12dp"
                        android:layout_toLeftOf="@id/tv_to_contact"
                        android:layout_toRightOf="@id/tv_phone"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="请填写机构联系人手机号"
                        android:textColorHint="@color/color_103"
                        android:textSize="@dimen/text_5" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_106" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="75dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:gravity="center_vertical"
                        android:text="联系人"
                        android:textColor="@color/color_100"
                        android:textSize="@dimen/text_5" />


                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_contact"
                        android:background="@null"
                        android:enabled="false"
                        android:hint="请填写机构联系人姓名"
                        android:textColorHint="@color/color_103"
                        android:textSize="@dimen/text_5" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_106" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@color/color_107"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:text="相关照片"
                    android:textColor="@color/color_102"
                    android:textSize="@dimen/text_7" />

                <com.ztstech.vgmate.weigets.CustomGridView
                    android:id="@+id/cgv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="10dp">

                </com.ztstech.vgmate.weigets.CustomGridView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
